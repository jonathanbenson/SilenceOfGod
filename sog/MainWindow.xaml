<Window x:Class="sog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sog"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="600" MinHeight="800" MinWidth="600" MaxHeight="800" MaxWidth="600" >
    <DockPanel>

        <TextBlock DockPanel.Dock="Top" Text="Genesis 1"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="10,10,10,5"/>

        <DockPanel DockPanel.Dock="Bottom">
            <TextBlock DockPanel.Dock="Left" x:Name="NextPageMessage" Text="Say 'help' for instructions"
                Margin="10" />
            <TextBlock DockPanel.Dock="Right" x:Name="NextPageMessage1" Text="Say 'next page' to flip the page, or 'last page' to go back"
                Margin="10" />
            <TextBlock Text="" />
        </DockPanel>

        <StackPanel Margin="15,5,15,10">
            <TextBlock TextWrapping="Wrap" Text="1 In the beginning God created the heavens and the earth." Margin="0,0,0,5"/>
            <TextBlock TextWrapping="Wrap" Text="2 Now the earth was formless and empty, darkness was over the surface of the deep, and the Spirit of God was hovering over the waters." Margin="0,0,0,5"/>
        </StackPanel>

    </DockPanel>
</Window>
