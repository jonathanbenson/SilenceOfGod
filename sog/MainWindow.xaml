<Window x:Class="sog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sog"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="600" MinWidth="300" MinHeight="300">
    <Grid>
        <!-- Header for the book name -->
        <TextBlock Text="Genesis 1"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="10"/>

        <!-- Scrollable area for verses -->
        <StackPanel Margin="10,40,10,10">
            <!-- Sample verses with text wrapping -->
            <TextBlock TextWrapping="Wrap" Text="1 In the beginning God created the heavens and the earth." Margin="5"/>
            <TextBlock TextWrapping="Wrap" Text="2 Now the earth was formless and empty, darkness was over the surface of the deep, and the Spirit of God was hovering over the waters." Margin="5"/>
            <!-- Add more verses here with TextWrapping="Wrap" -->
        </StackPanel>

        <TextBlock x:Name="NextPageMessage" Text="Go to next page"
            HorizontalAlignment="Right" 
            Margin="10" VerticalAlignment="Bottom" />
        <TextBlock x:Name="NextPageMessage1" Text="Go to next page"
            HorizontalAlignment="Left" 
            Margin="10" VerticalAlignment="Bottom" />

    </Grid>
</Window>
