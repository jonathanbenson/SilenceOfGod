
<Window x:Class="sog.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sog"
        mc:Ignorable="d"
        Title="Help" Height="800" Width="600" MinHeight="800" MinWidth="600" MaxHeight="800" MaxWidth="600">

<DockPanel>
    <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="0,10,0,10" FontSize="24">Help</TextBlock>
    <StackPanel>
        <StackPanel Margin="15,10,0,10">
            <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="16">exit</TextBlock>
            <TextBlock TextWrapping="Wrap" FontSize="16">Close the current window</TextBlock>
        </StackPanel>
        <StackPanel Margin="15,10,0,10">
            <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="16">help</TextBlock>
            <TextBlock TextWrapping="Wrap" FontSize="16">Open up a helpful window for instructions</TextBlock>
        </StackPanel>
        <StackPanel Margin="15,10,0,10">
            <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="16">contents</TextBlock>
            <TextBlock TextWrapping="Wrap" FontSize="16">Open the table of contents</TextBlock>
        </StackPanel>
        <StackPanel Margin="15,10,0,10">
            <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="16">search {book} {chapter} {verse}</TextBlock>
            <TextBlock TextWrapping="Wrap" FontSize="16">Navigate to a specific verse</TextBlock>
            <TextBlock FontStyle="Italic" TextWrapping="Wrap" FontSize="16">Example 1: "search John three sixteen" to navigate to John 3:16</TextBlock>
            <TextBlock FontStyle="Italic" TextWrapping="Wrap" FontSize="16">Example 2: "search First Corinthians fifteen one" to navigate to 1 Corinthians 15:1</TextBlock>
        </StackPanel>
        <StackPanel Margin="15,10,0,10">
            <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="16">next {n}</TextBlock>
            <TextBlock TextWrapping="Wrap" FontSize="16">Go forward n pages</TextBlock>
        </StackPanel>
        <StackPanel Margin="15,10,0,10">
            <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="16">last {n}</TextBlock>
            <TextBlock TextWrapping="Wrap" FontSize="16">Go backwards n pages</TextBlock>
        </StackPanel>
    </StackPanel>
</DockPanel>


</Window>
